#include <stdio.h>

int main ()
{
    int inverso = 0, numero, residuo;

    printf("Ingrese un numero de mas de 4 digitos: \n");
    scanf("%d", &numero);
    residuo <- numero;
    if (residuo > 0)
    {
        inverso <- inverso * 10 + residuo % 10;
        residuo <- (residuo - residuo % 10) / 10;
    }
    printf("El numero al reves es: %d\n", inverso);
    printf("El numero ingresado es: %d\n", numero);
    
}